<MainLayout>:
    orientation: 'vertical'
    padding: 20
    spacing: 10
    Header:
        id: header
    Label:
        text: 'Hello, World!'
        size_hint_y: 1
    Footer:
        id: footer

<Header>:
    size_hint_y: None
    height: '50dp'
    spacing: 10
    MDBoxLayout:
        size_hint_x: 1
        MDLabel:
            text: 'Balance: 0.00 LTC â‰ˆ 0.00 $'
            size_hint_x: 0.8
            halign: 'left'
            valign: 'middle'
            text_size: self.width, self.height

        MDIconButton:
            icon: 'menu'
            theme_icon_color: "Custom"
            icon_color: "white"
            size_hint_x: None
            width: dp(40)
            pos_hint: {"right": 1}

<Footer>:
    size_hint_y: None
    height: '50dp'
    spacing: 10
    MDBoxLayout:
        orientation: 'horizontal'
        size_hint_x: 1
        spacing: 7

        MDButton:
            style: "elevated"
            theme_width: "Custom"
            theme_shadow_color: "Custom"
            height: "56dp"
            size_hint_x: .5

            MDButtonIcon:
                pos_hint: {"center_x": .5, "center_y": .633}
                icon: "history"
                theme_icon_color: "Custom"
                icon_color: "white"

            MDButtonText:
                id: text
                text: "History"
                theme_text_color: "Custom"
                text_color: "white"
                pos_hint: {"center_x": .5, "center_y": .333}
        
        MDButton:
            style: "elevated"
            theme_width: "Custom"
            theme_shadow_color: "Custom"
            height: "56dp"
            size_hint_x: .5

            MDButtonIcon:
                pos_hint: {"center_x": .5, "center_y": .633}
                icon: "call-made"
                theme_icon_color: "Custom"
                icon_color: "white"

            MDButtonText:
                id: text
                text: "Send"
                theme_text_color: "Custom"
                text_color: "white"
                pos_hint: {"center_x": .5, "center_y": .333}
        
        MDButton:
            style: "elevated"
            theme_width: "Custom"
            theme_shadow_color: "Custom"
            height: "56dp"
            size_hint_x: .5

            MDButtonIcon:
                pos_hint: {"center_x": .5, "center_y": .633}
                icon: "call-received"
                theme_icon_color: "Custom"
                icon_color: "white"

            MDButtonText:
                id: text
                text: "Recieve"
                theme_text_color: "Custom"
                text_color: "white"
                pos_hint: {"center_x": .5, "center_y": .333}