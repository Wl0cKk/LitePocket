<MainLayout>:
    orientation: 'vertical'
    padding: 20
    spacing: 10
    Header:
        id: header
    Label:
        text: 'Hello, World!'
        size_hint_y: 1
    Footer:
        id: footer

<Header>:
    size_hint_y: None
    height: '50dp'
    MDBoxLayout:
        size_hint_x: 1
        MDLabel:
            text: 'Balance: 0.00 LTC â‰ˆ 0.00 $'
            size_hint_x: 0.8
            halign: 'left'
            valign: 'middle'
            text_size: self.width, self.height

        MDIconButton:
            icon: 'menu'
            theme_icon_color: "Custom"
            icon_color: "white"
            size_hint_x: None
            width: dp(40)
            pos_hint: {"right": 1}

<Footer>:
    size_hint_y: None
    height: '50dp'
    MDBoxLayout:
        orientation: 'horizontal'
        size_hint_x: 1

        MDTabsPrimary:
            id: tabs
            allow_stretch: True
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            MDTabsItem:
                MDTabsItemIcon:
                    id: history_icon
                    icon: "history"
                    theme_icon_color: "Custom"
                    icon_color: "white"

                MDTabsItemText:
                    id: history_text
                    text: "History"
                    theme_text_color: "Custom"
                    text_color: "white"

            MDTabsItem:
                MDTabsItemIcon:
                    id: send_icon
                    icon: "call-made"
                    theme_icon_color: "Custom"
                    icon_color: "white"

                MDTabsItemText:
                    id: send_text
                    text: "Send"
                    theme_text_color: "Custom"
                    text_color: "white"

            MDTabsItem:
                MDTabsItemIcon:
                    id: receive_icon
                    icon: "call-received"
                    theme_icon_color: "Custom"
                    icon_color: "white"

                MDTabsItemText:
                    id: receive_text
                    text: "Receive"
                    theme_text_color: "Custom"
                    text_color: "white"
