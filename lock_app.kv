<NewPasswordWindow>:
    MDBoxLayout:
        spacing: 10
        orientation: 'vertical'
        pos_hint: {"center_x": 0.5, "center_y": 0.6}
        size_hint_y: None

        MDLabel:
            text: "Enter password:"
            pos_hint: {"center_x": 0.6}
            height: self.texture_size[1]

        MDTextField:
            id: wallet
            hint_text: "output"
            multiline: False
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5}
            password: True
        
        MDLabel:
            text: "Confirm password:"
            pos_hint: {"center_x": 0.6}
            height: self.texture_size[1]

        MDTextField:
            id: wallet
            hint_text: "output"
            multiline: False
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5}
            password: True
        
        MDButton:
            style: "elevated"
            theme_width: "Custom"
            theme_shadow_color: "Custom"
            height: "56dp"
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5}

            MDButtonText:
                id: text
                text: "Apply"
                theme_text_color: "Custom"
                text_color: "white"
                pos_hint: {"center_x": .5, "center_y": .5}

